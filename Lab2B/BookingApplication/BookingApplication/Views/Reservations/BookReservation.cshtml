@model BookingApplication.Models.BookReservation

<h1>Book a reservation</h1>

<div class="row">
    <div class="col-4">

        <form asp-action="BookReservationConfirmed">
            <input type="hidden" asp-for="ReservationId" />

            <div class="form-group">
                <label asp-for="Number_of_nights"></label>
                <input asp-for="Number_of_nights" class="form-control" />
            </div>
            <div class="form-group">
                <input type="submit" value="Book now" class="btn-info" />
            </div>
        </form>
    </div>
</div>

