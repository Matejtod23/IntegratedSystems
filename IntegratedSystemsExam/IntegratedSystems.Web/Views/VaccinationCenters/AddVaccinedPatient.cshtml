@model IntegratedSystems.Domain.dto.AddVaccinedPatientDTO


<div class="row">
    <div class="col-md-4">
        <form asp-action="AddVaccinedPatient">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Manufacturers" class="control-label"></label>
                @Html.DropDownListFor(x => Model.selectedMan, new SelectList(Model.Manufacturers), new { @class = "form-control" })
                <span asp-validation-for="Manufacturers" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="DateTaken" class="control-label"></label>
                <input asp-for="DateTaken" class="form-control" type="datetime-local"/>
                <span asp-validation-for="DateTaken" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="PatientId" class="control-label"></label>
                @Html.DropDownListFor(x => Model.PatientId, new SelectList(Model.AllPatients, "Id", "FirstName"), new { @class = "form-control" })
                <span asp-validation-for="PatientId" class="text-danger"></span>
            </div>
            <input asp-for="CenterId" type="hidden" />
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>
